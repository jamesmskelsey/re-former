<%= form_for @user, url: {action: "create"} do |f|%>
  <%= f.label :username do 'User name: '.html_safe end %>
  <%= f.text_field :username, placeholder: "enter your name" %><br>
  <%= f.label :email do 'Email: '.html_safe end %>
  <%= f.email_field :email, placeholder: "enter your email" %><br>
  <%= f.label :password do 'Password:'.html_safe end %>
  <%= f.password_field :password, placeholder: "enter your password" %><br>
  <%= f.submit "Register" %>
<% end %>
